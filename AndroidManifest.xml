<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prahladyeri.android.droidwells"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="Droid Wells" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddWellsActivity"
            android:label="@string/title_activity_add_wells"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prahladyeri.android.droidwells.MainActivity" />
        </activity>
        <activity
            android:name=".DeleteWellsActivity"
            android:label="@string/title_activity_delete_wells"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prahladyeri.android.droidwells.MainActivity" />
        </activity>
        <activity
            android:name=".NewDayActivity"
            android:label="@string/title_activity_new_day" >
        </activity>
        <activity
            android:name=".NewDayTanksActivity"
            android:label="@string/title_activity_new_day_tanks"
            android:parentActivityName=".NewDayActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.prahladyeri.android.droidwells.NewDayActivity" />
        </activity>
    </application>

</manifest>
